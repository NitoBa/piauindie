{
  "name": "piauindie",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:admin\"",
    "install:web": "cd apps/web && npm i",
    "install:admin": "cd apps/admin && npm i",
    "install:all": "npm i && concurrently \"npm run install:web\" \"npm run install:admin\"",
    "prepare": "husky install",
    "commit": "git-cz",
    "lint": "eslint apps/**/src --ext .tsx,.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@rocketseat/eslint-config": "^1.1.3",
    "commitizen": "^4.2.6",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "prettier": "^2.8.1"
  },
  "lint-staged": {
    "apps/**/": "prettier --write --ignore-unknown",
    "apps/**": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
